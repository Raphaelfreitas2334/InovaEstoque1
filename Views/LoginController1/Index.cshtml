@model LoginModel
@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "login";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
        @TempData["MensagemSucesso"]
    </div>
}

<form asp-controller="LoginController1" asp-action="LoginUsuario" method="post">

    <section style="background-color: #eee;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-10">
                    <div class="card rounded-3 text-black">
                        <div class="row g-0">
                            <div class="col-lg-6">
                                <div class="card-body p-md-5 mx-md-4">

                                    <div class="text-center">
                                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                                             style="width: 185px;" alt="logo">
                                        <h4 class="mt-1 mb-5 pb-1">Nos somos o InovaEstoque</h4>
                                    </div>

                                    <form>
                                        <p>Por favor faça login com sua conta</p>

                                        <div class="form__group field">
                                            <input type="text" asp-for="Email" class="form__field" placeholder="Email"  id='name' required />
                                            <label for="name" class="form__label">Login</label>
                                            @Html.ValidationMessageFor(X => X.Email)
                                        </div>
                                       
                                        <div class="form__group field">
                                            <input type="password" asp-for="Senha" class="form__field" placeholder="Senha" id='name' required />
                                            <label for="name" class="form__label">Senha</label>
                                            @Html.ValidationMessageFor(X => X.Senha)
                                        </div>

                                        <div class="text-center pt-1 mb-5 pb-1">
                                            <button type="submit" class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3">Entrar</button>
                                            <div>
                                                <hi>OU</hi>
                                            </div>
                                            <a asp-action="Recadastro" asp-controller="LoginController1" class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3">Esqueceu a senha</a>

                                            <hr>

                                            <a asp-action="inicio" asp-controller="LoginController1" class="btn btn-primary btn-block fa-lg">Voltar para a home</a>
                                        </div>
                                        


                                    </form>

                                </div>
                            </div>
                            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                                <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                    <h4 class="mb-4">We are more than just a company</h4>
                                    <p class="small mb-0">
                                        Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                                        tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
                                        exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

<style>
    .form__group {
        position: relative;
        padding: 15px 0 0;
        margin-top: 10px;
        width: 100%;
    }

    .form__field {
        font-family: inherit;
        width: 100%;
        border: 0;
        border-bottom: 2px solid #9b9b9b;
        outline: 0;
        font-size: 1.0rem;
        color: #1e30f3;
        padding: 7px 0;
        background: transparent;
        transition: border-color 0.2s;
    }

        .form__field::placeholder {
            color: transparent;
        }

        .form__field:placeholder-shown ~ .form__label {
            font-size: 1.3rem;
            cursor: text;
            top: 20px;
        }

    .form__label {
        position: absolute;
        top: 0;
        display: block;
        transition: 0.2s;
        font-size: 1rem;
        color: #1e30f3 ;
    }

    .form__field:focus {
        padding-bottom: 6px;
        font-weight: 700;
        border-width: 3px;
        border-image: linear-gradient(135deg, #1e30f3 0%, #e21e80 100%);
        border-image-slice: 1;
    }

        .form__field:focus ~ .form__label {
            position: absolute;
            top: 0;
            display: block;
            transition: 0.2s;
            font-size: 1rem;
            color: #e21e80;
            font-weight: 700;
        }

    /* reset input */
    .form__field:required, .form__field:invalid {
        box-shadow: none;
    }
</style>