@model List<AlimentoModel>
@{
    ViewData["Title"] = "Listagem de Alimentos";
}


<link rel="stylesheet" href="~/css/EstoqueCSS/indexEstoque.css" />


<div id="alertasDaPagina">
    @if (TempData["SUCESSO"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["SUCESSO"]
        </div>
    }

    @if (TempData["ERRO"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["ERRO"]
        </div>
    }
</div>

<section>
    <div id="container-alimento">
        <div id="box-title">
            <div>
                @await Component.InvokeAsync("BotaoAlimentos")
            </div>
        </div>
        <div>
            <button onclick="window.print()">Imprimir esta página</button>
        </div>
        <div class="table-responsive">
            <table class="table table-Alimento" id="table-alimento">
                <thead class="thead-custom">
                    <tr>
                        <th scope="col">Descrição</th>
                        <th scope="col">Fornecedor</th>
                        <th scope="col">Vencimento</th>
                        <th scope="col">Data Cadastro</th>
                        <th scope="col">Status</th>
                        <th scope="col">Unidade de medida</th>
                        <th scope="col">Qtd atual</th>
                        <th scope="col">Qtd Máxima</th>
                        <th scope="col">Qtd Mínima</th>
                        <th scope="col" id="invisivel">Config</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (AlimentoModel alimento in Model)
                        {
                            var uniqueId = "dropdownMenuButton" + alimento.Id;
                            <tr>
                                <td>@alimento.nomeAlimento</td>
                                <td>@alimento.FornecedorNome</td>
                                <td>@alimento.dataVencimento</td>
                                <td>@alimento.DataCadastro</td>
                                @* if para gerenciar o status do alimento *@
                                <td>
                                    @if (alimento.quantidadeAtual < alimento.quantidadeMinima)
                                    {
                                        <span class="badge badge-danger rounded-pill">Perigo</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-success rounded-pill">Confortável</span>
                                    }
                                </td>
                                <td>@alimento.unidadeMedida</td>
                                @* if para verificar se a tabela esta nula *@
                                @if (alimento.quantidadeAtual == null)
                                {
                                    <td>0</td>
                                    <td>0</td>
                                    <td>0</td>
                                }
                                else
                                {
                                    <td>@alimento.quantidadeAtual</td>
                                    <td>@alimento.quantidadeMaxima</td>
                                    <td>@alimento.quantidadeMinima</td>
                                }
                                <td id="invisivel">
                                    <div class="dropdown">
                                        <button class="btn btn-primary dropdown-toggle dropdown-custom-toggle" type="button" id="@uniqueId" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Configurações
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-right dropdown-custom-menu" aria-labelledby="@uniqueId">
                                            <button class="dropdown-item" onclick="javascrip:" alimento-id="@alimento.Id"><img src="~/imagens/btn_editar.png" alt="Editar" class="dropdown-icon" id="iconEditar"> Editar</button>
                                            <button class="dropdown-item" onclick="javascrip:" alimento-id="@alimento.Id"><img src="~/imagens/btn_excluir.png" alt="Excluir" class="dropdown-icon" id="iconExcluir"> Excluir</button>
                                            <button class="dropdown-item" onclick="javascrip:" alimento-id="@alimento.Id"><img src="~/imagens/btn_Retira.png" alt="Retirar" class="dropdown-icon" id="iconRetira"> Retirar</button>
                                            <button class="dropdown-item" onclick="javascrip:" alimento-id="@alimento.Id"><img src="~/imagens/btn_devolve.png" alt="Devolver" class="dropdown-icon" id="iconDevolve"> Devolver</button>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>



<style>
    /* Estilos para o botão dropdown */
    .dropdown-custom-toggle {
        border-radius: 20px;
        font-weight: bold;
        background-color: #007bff;
        border-color: #007bff;
        width: 170px; /* ajuste conforme necessário */
    }

        .dropdown-custom-toggle:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    /* Estilos para o menu dropdown */
    .dropdown-custom-menu {
        border-radius: 20px;
        background-color: #f8f9fa;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    }

    /* Estilos para os itens do menu dropdown */
    .dropdown-item {
        color: #495057;
        border-radius: 7px;
    }

        .dropdown-item:hover {
            background-color: #cce5ff;
            color: #007bff;
        }
    
    .thead-custom {
        background-color: #000028;
        color: white;
    }


</style>

<style>
    @@media print {
        body {
            color: gray;
        }

        #conteudo {
            font-size: 14pt;
        }

        button {
            display: none;
        }

        #box-title {
            display: none;
        }
        #invisivel{
            display: none;
        }

        .thead-custom {
            background-color: #000028;
            color: black;
        }
    }
</style>

